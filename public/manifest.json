{
  "manifest_version": 3,
  "name": "Definitive URL Saver",
  "description": "Salve URLs com metadados, imagens e organize sua coleção de links",
  "version": "1.0.0",
  "action": {
    "default_popup": "index.html",
    "default_title": "Definitive URL Saver",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "128": "icons/icon-128.png",
      "192": "icons/icon-192.png",
      "512": "icons/icon-512.png"
    }
  },
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "128": "icons/icon-128.png",
    "192": "icons/icon-192.png",
    "512": "icons/icon-512.png"
  },
  "permissions": [
    "activeTab",
    "storage",
    "clipboardWrite"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
